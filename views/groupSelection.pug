<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="/CSS/groupSelection.css">

    <title>Judgement Sheet</title>
    <script src="https://cdn.socket.io/3.1.3/socket.io.min.js"></script>
</head>

<body>
    <form class="groupSelectionForm">
        <div class="header">
            <h5 align="center">Judge Name: <span id="judgeName">#{judgeName}</span></h5>
            <h1 style="display: none;" id="yss_id">#{yss_id}</h1>
            <h5>Choose Your Competition Name</h5>
            <select class="form-select" id="competitionName"  aria-label="Default select example"></select>
            <br>
            <h5>Choose Your Judge Number</h5>
            <select class="form-select" id="judgeSelection" aria-label="Default select example"></select>
            <br>
            <h5>Choose Your Judgement Group</h5>
            <select class="form-select" id="groupSelection"  aria-label="Default select example"></select>
            <br>
            <div class="buttonContainer">
                <input type="button" class="btn btn-warning" id="openBtn" value="Open Judgement Sheet">
            </div>
        </div>
    </form>

    <div class="judgementSheet">
        <table class="table table-responsive judgementSheetTable">
            <thead>
                <tr>
                    <th scope="col" rowspan="2" style="width: 100px;">Chest No.</th>
                    <th scope="col" colspan="4" style="text-align: center;">Asanas</th>
                </tr>
                <tr id="tHeadAsanas"></tr>
            </thead>
            <tbody id="tableBody"></tbody>
        </table>
    </div>
    <br>
    <div class="d-flex" style="flex-direction: row;justify-content: space-around;">
        <button class="btn btn-primary" id="prev" disabled onclick="prev()">Previous</button>
        <button class="btn btn-danger" onclick="finalize()">Finalize</button>
        <button class="btn btn-primary" id="next" disabled onclick="next()">Next</button>
    </div>



    <script src="/JS/groupSelection.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    
    
</body>
<script src="http://localhost:5500/socket.io/socket.io.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

</html>